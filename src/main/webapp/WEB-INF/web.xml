<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>OrderServlet</servlet-name>
    <servlet-class>com.serviceSystem.servlet.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderServlet</servlet-name>
    <url-pattern>/sendOrder</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowOrdersServlet</servlet-name>
    <servlet-class>com.serviceSystem.servlet.ShowOrdersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowOrdersServlet</servlet-name>
    <url-pattern>/showOrders</url-pattern>
  </servlet-mapping>

</web-app>
